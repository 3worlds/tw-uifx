<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="au.edu.anu.twuifx.mr.view.MrController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu fx:id="menuWidgets" mnemonicParsing="false" text="Widgets" />
                  <Menu mnemonicParsing="false" text="Initial state" />
                  <Menu mnemonicParsing="false" text="Parameters">
                     <items>
                        <CheckMenuItem fx:id="miDashboard" mnemonicParsing="false" onAction="#handleDashboard" text="Dashboard" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="About">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Current setup" />
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
            <HBox fx:id="toolBar" />
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox fx:id="statusBar" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
